{
  "name": "@tools.org.ai/email",
  "version": "0.0.1",
  "description": "Email tool - aggregates resend, sendgrid, google-workspace, office-365 providers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "digital-tools": "workspace:*",
    "@tools.org.ai/resend": "workspace:*",
    "@tools.org.ai/sendgrid": "workspace:*",
    "@tools.org.ai/google-workspace": "workspace:*",
    "@tools.org.ai/office-365": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "keywords": ["email", "gmail", "outlook", "transactional", "ai", "tools"],
  "license": "MIT"
}
