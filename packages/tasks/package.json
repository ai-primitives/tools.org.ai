{
  "name": "@tools.org.ai/tasks",
  "version": "0.0.1",
  "description": "Tasks tool - aggregates github, linear, todoist, notion providers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "digital-tools": "workspace:*",
    "@tools.org.ai/github": "workspace:*",
    "@tools.org.ai/linear": "workspace:*",
    "@tools.org.ai/todoist": "workspace:*",
    "@tools.org.ai/notion": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "keywords": ["tasks", "issues", "todo", "productivity", "ai", "tools"],
  "license": "MIT"
}
